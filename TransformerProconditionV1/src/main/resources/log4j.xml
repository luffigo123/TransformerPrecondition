<?xml version="1.0" encoding="UTF-8"?> 
<!DOCTYPE log4j:configuration SYSTEM "log4j.dtd">

<log4j:configuration xmlns:log4j='http://jakarta.apache.org/log4j/' >       
          
    <appender name="StdOut" class="org.apache.log4j.ConsoleAppender">       
        <layout class="org.apache.log4j.PatternLayout">       
            <param name="ConversionPattern"          
                value="[%d{dd HH:mm:ss,SSS\} %-5p] [%t] %c{2\} - %m%n" />       
        </layout>       
        <!--过滤器设置输出的级别 : Set output level-->
        <filter class="org.apache.log4j.varia.LevelRangeFilter">       
            <param name="levelMin" value="debug" />       
            <param name="levelMax" value="error" />       
            <param name="AcceptOnMatch" value="true" />       
        </filter>       
    </appender>       
       
    <appender name="FileOut" class="org.apache.log4j.RollingFileAppender">          
        <param name="File" value="src\\main\\resources\\LogFile.log" /><!-- 设置日志输出文件名  : Set name of output file-->       
        <!-- 设置是否在重新启动服务时，在原有日志的基础添加新日志 : Whether to add new log when restart service -->       
        <param name="Append" value="true" />       
        <param name="MaxBackupIndex" value="10" />       
        <layout class="org.apache.log4j.PatternLayout">       
            <param name="ConversionPattern" value="%p (%c:%L)- %m%n" />       
        </layout>       
    </appender>       
                    
    <!-- 根logger的设置 : root logger setting-->       
    <root>       
        <priority value ="info"/>       
        <appender-ref ref="StdOut"/>       
        <appender-ref ref="FileOut"/>          
    </root>       
</log4j:configuration>   
      
       
       
